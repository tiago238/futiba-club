<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Futiba Club - Fullstack Academy - DevPleno</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/futiba-interno.css" rel="stylesheet">
</head>

<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                    <% include ../elements/menu-items %>
                </div>
            </div>
        </nav>
    </header>

    <section class="content">
        <div class="container">
            <div class="row">
                <h2>Gerenciamento de Jogos</h2>
            </div>
            <form class = "row" method="post">
                    <div class="md-form">
                        <i class="fa fa-user prefix grey-text"></i>
                        <input type="text"  class="form-control" name="team_a">
                        <label for="orangeForm-name">Time A</label>
                    </div>
                    <div class="md-form">
                            <i class="fa fa-user prefix grey-text"></i>
                            <input type="text"  class="form-control" name="team_b">
                            <label for="orangeForm-name">Time B</label>
                        </div>
                    <div class="text-center">
                        <button class="btn btn-deep-orange">Criar jogo</button>
                    </div>
                </form>
                <form method="post" action=" /admin/games/results">
                <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Jogos</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% games.forEach( game => { %>
                            <tr>
                                <th scope="row">
                                    <%= game.id %>
                                </th>
                                <td>
                                    <input class="form-control" name="team_<%= game.id %>[a]">
                                    <%= game.team_a %> VS <%= game.team_b %>
                                    <input class="form-control" name="team_<%= game.id %>[b]">
                                </td>
                                <td>
                                    <a href="/admin/games/delete/<%= game.id %>">
                                        Excluir
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <input type="submit" value="Informar Resultados">
                </form>
        </div>
    </section>
    <footer class="page-footer center-on-small-only">
        <div class="footer-copyright">
            <div class="container-fluid">
                © 2018 Projeto desenvolvido durante o Fullstack Academy -
                <a href="https://www.devpleno.com">DevPleno</a>
            </div>
        </div>
    </footer>


    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="/js/mdb.min.js"></script>
</body>

</html>