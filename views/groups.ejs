<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Futiba Club - Fullstack Academy - DevPleno</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/futiba-interno.css" rel="stylesheet">
</head>

<body>
    <header>
        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                    <% include elements/menu-items %>
                </div>
            </div>
        </nav>
    </header>

    <section class="content">
        <div class="container">
            <div class="row">
                <h2>Grupos</h2>
            </div>
            <form class = "row" method="post">
                    <div class="md-form">
                        <i class="fa fa-user prefix grey-text"></i>
                        <input type="text"  class="form-control" name="name">
                        <label for="orangeForm-name">Nome do Grupo</label>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-deep-orange">Criar Grupo</button>
                    </div>
                </form>
                <% if(groups.length > 0){ %>
                <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Jogos</th>
                                <th></th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% groups.forEach( group => { %>
                            <tr>
                                <th scope="row"><%= group.id %></th>
                                <td>
                                    <a href="/groups/<%= group.id %> ">
                                      <%= group.name %> 
                                    </a>
                                </td>
                                <td><%= group.role %> </td>
                                <td>
                                    <% if(group.role === 'owner'){ %>
                                    <a href="/admin/groups/delete/<%= group.id %>">
                                        Excluir
                                    </a>
                                    <% } %>
                                    <% if(!group.role){ %>
                                        <a href="/groups/<%= group.id %>/join">
                                            Solicitar entrada
                                        </a>
                                        <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% }else { %>
                        <p class="alert alert-info">Nenhum grupo cadastrado.</p>
                        <% } %>
        </div>
    </section>
    <footer class="page-footer center-on-small-only">
        <div class="footer-copyright">
            <div class="container-fluid">
                © 2018 Projeto desenvolvido durante o Fullstack Academy -
                <a href="https://www.devpleno.com">DevPleno</a>
            </div>
        </div>
    </footer>


    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="/js/mdb.min.js"></script>
</body>

</html>